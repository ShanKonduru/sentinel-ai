# Frontend Environment Configuration

# API Endpoints
VITE_METRICS_API_URL=http://localhost:5000
VITE_DATA_API_URL=http://localhost:8000

# Dashboard Settings
VITE_APP_NAME=Sentinel AI Dashboard
VITE_APP_VERSION=1.0.0
VITE_REFRESH_INTERVAL=30000

# Feature Flags
VITE_ENABLE_REAL_TIME_UPDATES=true
VITE_ENABLE_EXPORT_FEATURES=true
VITE_ENABLE_ADVANCED_FILTERS=true

# Development Settings
VITE_LOG_LEVEL=info
VITE_ENABLE_DEV_TOOLS=true

# Theme and UI
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true

# Performance
VITE_CHART_UPDATE_INTERVAL=5000
VITE_MAX_DATA_POINTS=1000
VITE_LAZY_LOADING_ENABLED=true